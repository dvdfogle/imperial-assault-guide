<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:actionBarStyle">@style/TopNavBar</item>
    </style>
    <style name="TopNavBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:elevation">8dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:titleTextStyle">@style/TopNavBarText</item>
    </style>
    <style name="TopNavBarText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="ImageCaption" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/captionBackground</item>
        <item name="android:textColor">@color/captionText</item>
        <item name="android:textSize">9pt</item>
    </style>

</resources>
