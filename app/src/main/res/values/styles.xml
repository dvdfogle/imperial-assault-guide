<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="ImageCaption" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/captionBackground</item>
        <item name="android:textColor">@color/captionText</item>
        <item name="android:textSize">9pt</item>
    </style>

</resources>
